<Video>:
    fullscrenn: True
    # canvas:
    #     Rectangle:
    #         source: "cover.jpg"
    #         size: self.size
    #         pos: self.pos
    BoxLayout:
        orientation: 'horizontal'
        size: root.size
        FloatLayout:
            size_hint: 0.8, 1
            orientation:'vertical'
            Image:
                allow_stretch: True
                keep_ratio: False
                pos_hint:{'top': 1}
                size_hint:1,0.88
                source: "assets/images/cover.jpg"
            FloatLayout:
                pos_hint:{'top': 0.12}
                size_hint:1,0.12
                canvas.before:
                    Color:
                        rgba: 0.25, 0.25, 0.25, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    pos_hint:{'x': -0.02, 'y':0.1}
                    size_hint:0.2,0.8
                    source: "assets/images/cover.jpg"
                Image:
                    pos_hint:{'center_x': 0.44, 'center_y': 0.5}
                    size_hint:0.2,0.4
                    source: "assets/images/record.png"
                Image:
                    pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                    size_hint:0.2,0.5
                    source: "assets/images/capture.png"
                Image:
                    pos_hint:{'center_x': 0.56, 'center_y': 0.5}
                    size_hint:0.2,0.4
                    source: "assets/images/overlay.png"
                Image:
                    pos_hint:{'center_x': 0.95, 'center_y': 0.5}
                    size_hint:0.2,0.35
                    source: "assets/images/camera-swap.png"
        FloatLayout:
            size_hint: 0.2, 1
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
